<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BabyBrother">

    <Color x:Key="SubtleForeground">#EDEDED</Color>
    <SolidColorBrush 
        x:Key="SubtleBrush"
        Color="{StaticResource SubtleForeground}"
        />
    
    <x:Double x:Key="TinyFontSize">12</x:Double>
    <x:Double x:Key="SubheaderFontSize">20</x:Double>
    <x:Double x:Key="TitleFontSize">24</x:Double>
    
    <Style x:Key="TinyHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TinyFontSize}"/>
        <Setter Property="Foreground" Value="{StaticResource SubtleForeground}"/>
    </Style>

    <Style x:Key="TinyDetailTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TinyFontSize}"/>
        <Setter Property="Foreground" Value="{StaticResource SubtleForeground}"/>
    </Style>

    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TitleFontSize}"/>
        <Setter Property="Margin" Value="{StaticResource SectionMargin}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style x:Key="SubheaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource SubheaderFontSize}"/>
    </Style>

</ResourceDictionary>
